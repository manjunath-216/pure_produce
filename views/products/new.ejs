<%- layout('./layouts/boilerplate') %>

<div class="row mb-3 justify-content-center" >
    <div class="col-md-6">
        <h3 class="text-center h3">Add Product</h3>
        <form action="/products" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Product Name</label>
                <input class="form-control" type="text" name="name" placeholder="product name" id="name" required autofocus>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <select class="form-select" name="category" required>
                    <% for(let category of categories){ %>
                        <option value="<%= category %>"><%= category %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Product Details</label>
                <textarea class="form-control" name="description" id="description" cols="30" rows="3" placeholder="product details" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" name="image" placeholder="url" id="image" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price per kg</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">&#8377;</span>
                    </div>
                    <input type="number" class="form-control" id="price" placeholder="0" name="price" min="0" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="quantity">Quantity</label>
                <input class="form-control" type="text" name="quantity" placeholder="quantity in kgs" id="quantity" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="shelfLife">Shelf Life</label>
                <input class="form-control" type="text" name="shelfLife" placeholder="shelf life in days" id="shelfLife" required>
            </div>
            <button class="btn btn-success">Add Product</button>
        </form>
    </div>
</div>

<script src="/validateForms.js"></script>